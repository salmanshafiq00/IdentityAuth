@model CreateRoleViewModel
<div class="container bg-secondary p-4">
    <form asp-action="CreateRole" asp-controller="Administration" method="post">
        <div class="row form-group">
            <div class="col-md-4">
                <label asp-for="RoleName" class="form-label"></label>
            </div>
            <div class="col-md-8">
                <input type="text" asp-for="RoleName" class="form-control"/>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <button type="submit" class="btn btn-primary">Create Role</button>
            </div>
        </div>
    </form>
</div>
